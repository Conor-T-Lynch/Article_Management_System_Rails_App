<div class="container d-flex flex-column justify-content-center align-items-center vh-75">
  <div class="text-center">
    <p style="color: green"><%= notice %></p>

    <%= render @article %>

    <div class="mt-4">
      <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary mb-2" %>
      <%= link_to "Back to articles", articles_path, class: "btn btn-secondary mb-2" %>
      <%= button_to "Destroy this article", @article, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
