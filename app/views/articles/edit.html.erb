<% content_for :title, "Editing article" %>

<div class="container mt-5">
  <h1>Editing article</h1>

  <%= render "form", article: @article %>

  <br>

  <div class="mt-3">
    <%= link_to "Show this article", @article, class: "btn btn-info mb-2" %>
    <%= link_to 'Back', articles_path, class: "btn btn-secondary mb-2" %>
    <%= button_to "Destroy this article", @article, method: :delete, class: "btn btn-danger mb-2" %>
  </div>
</div>
